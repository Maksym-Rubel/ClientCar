<Window x:Class="ClientDz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientDz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <TextBox Name="TxBox" HorizontalContentAlignment="Center" Height="50" ></TextBox>
        <Button FontWeight="Bold" FontSize="20" Grid.Column="1" Width="100" HorizontalAlignment="Left" Click="CntBtn">Connect</Button>

        <ListBox Grid.Row="1" Grid.ColumnSpan="2" Name="lb1"></ListBox>

        <Button FontWeight="Bold" FontSize="20" Grid.Column="1"  Width="100" HorizontalAlignment="Right" Click="StrBtn">Start</Button>
    </Grid>
</Window>
